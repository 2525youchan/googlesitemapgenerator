MOD_NAME="mod_sitemap.@APACHE_VERSION@.@APACHE_ARCH@.so"
DAEMON_NAME="sitemap-daemon.@APACHE_ARCH@"

INSTALL_DIR="sitemap-install"

.PHONY: all
all:
	$(MAKE) --directory=third_party/zlib all
	$(MAKE) --directory=third_party/tinyxml all
	$(MAKE) --directory=third_party/md5 all
	$(MAKE) --directory=src/common all
	$(MAKE) --directory=src/apache_module all
	$(MAKE) --directory=src/sitemapservice all

.PHONY: clean
clean:
	$(MAKE) --directory=third_party/zlib clean
	$(MAKE) --directory=third_party/tinyxml clean
	$(MAKE) --directory=third_party/md5 clean
	$(MAKE) --directory=src/common clean
	$(MAKE) --directory=src/apache_module clean
	$(MAKE) --directory=src/sitemapservice clean

.PHONY: distclean
distclean: clean
	rm -f configure Makefile config.status config.cache config.log
	rm -f third_party/zlib/Makefile third_party/tinyxml/Makefile
	rm -f third_party/md5/Makefile
	rm -f src/common/Makefile src/apache_module/Makefile
	rm -f src/sitemapservice/Makefile

.PHONY: installer
installer: all
	@mkdir -p $(INSTALL_DIR)
	@cp -f src/linux_install/*.sh $(INSTALL_DIR)
	@cp -f src/linux_install/google-sitemap-generator-ctl $(INSTALL_DIR)
	@cp -f src/sitemapservice/sitemap-daemon $(INSTALL_DIR)/$(DAEMON_NAME)
	@cp -f src/apache_module/mod_sitemap.so $(INSTALL_DIR)/$(MOD_NAME)
	@cp -f -R src/sitemapservice/templates $(INSTALL_DIR)
	@chmod -R a+rwx $(INSTALL_DIR)
	@chmod a+rx .

.PHONY: install
install: installer
	sudo $(INSTALL_DIR)/install.sh --apache_bin="@APACHE_BIN@"
